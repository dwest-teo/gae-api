extends ../base.jade

block content
  h3 Logos

  a(href="/logos/add", class='btn btn-success btn-sm')
    i.glyphicon.glyphicon-plus
    span  Add logo

  each logo in logos
    .media
      a(href="/logos/#{logo.id}")
        .media-left
            img(src=logo.imageUrl || "http://stevensegallery.com/128/192")
        .media-body
          h4= logo.title
          p= logo.author

  if !logos.length
    p No logos found.

  if nextPageToken
    nav
      ul.pager
        li
          a(href="?pageToken=#{encodeURIComponent(nextPageToken)}") More
